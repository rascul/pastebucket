<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>pastebucket :: {{params.id}}</title>
		<link rel="stylesheet" href="/assets/styles.css">
	</head>
	<body>
		<header>
			<h1><a href="{{params.url}}">pastebucket</a></h1>
			<hr>
		</header>
		<nav>
			<ul>
				<li><a href="{{params.url}}/{{params.id}}"><strong>{{params.id}}</strong></a></li>
				<li><a href="{{params.url}}/{{params.id}}/edit">edit</a></li>
				<li><a href="{{params.url}}/{{params.id}}/raw">raw</a></li>
			</ul>
		</nav>
		<main>
			<div>
				{{~#each paste}}
				<div id="{{this.index}}" onmouseover="document.getElementById('{{this.index}}').firstElementChild.firstElementChild.style = 'color: red'" onmouseout="document.getElementById('{{this.index}}').firstElementChild.firstElementChild.style = 'color: lightcoral'">
					<div class="index" style="width: {{../params.index_width}}ch"><a href="#{{this.index}}">{{this.index}}</a></div><div class="line">{{this.line}}</div>
				</div>
				{{~/each}}
			</div>
		</main>
	</body>
</html>
